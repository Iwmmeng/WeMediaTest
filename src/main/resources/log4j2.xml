<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="warn">
    <!--<properties>-->
        <!--<property name="log.dir">/opt/logs/urlParser</property>-->
    <!--</properties>-->
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} %t [%p] %c{1} (%F:%L) %msg%n"/>
        </Console>
        <RollingFile name="DailyLog" fileName="${log.dir}/daily.log"
                     filePattern="${log.dir}/daily.%d{yyyy-MM-dd} %i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p (%c{1.}) - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="WarnLog" fileName="${log.dir}/warn.log"
                     filePattern="${log.dir}/warn.%d{yyyy-MM-dd} %i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p (%c{1.}) - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <RollingFile name="ErrorLog" fileName="${log.dir}/error.log"
                     filePattern="${log.dir}/error.%d{yyyy-MM-dd} %i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p (%c{1.}) - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>
    </appenders>

    <loggers>
        <!-- 指定项目可输出的最低级别日志 -->
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="DailyLog"/>
            <appender-ref ref="WarnLog"/>
            <appender-ref ref="ErrorLog"/>
        </root>
    </loggers>

</configuration>